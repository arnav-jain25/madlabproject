<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#355C7D"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/wm_homeimage"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="-3dp"
            android:layout_marginRight="-3dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/worldmap_homepage_opt1" />

        <TextView
            android:id="@+id/hp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="277dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/roboto_light"
            android:gravity="center_horizontal"
            android:text="Welcome to all the travel enthusiasts around the world. Come travel with us and check some places off your bucket list. Come fulfill your WANDERLUST"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#F67280"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_asia"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="270dp"
            android:background="#F8B192"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/roboto_bold"
            android:onClick="goToAsia"
            android:text="ASIA"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F67280"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#F8B192"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/btn_africa"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="270dp"
            android:background="#F8B192"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/roboto_bold"
            android:onClick="goToAfrica"
            android:text="AFRICA"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F67280"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#F8B192"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/btn_europe"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="195dp"
            android:background="#F8B192"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/roboto_bold"
            android:onClick="goToEurope"
            android:text="EUROPE"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F67280"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#F8B192" />

        <Button
            android:id="@+id/btn_namerica"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="195dp"
            android:background="#F8B192"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/roboto_bold"
            android:onClick="goToNamerica"
            android:text="NORTH AMERICA"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F67280"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#F8B192" />

        <Button
            android:id="@+id/btn_samerica"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="120dp"
            android:background="#F8B192"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/roboto_bold"
            android:onClick="goToSamerica"
            android:text="SOUTH AMERICA"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F67280"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#F8B192" />

        <Button
            android:id="@+id/btn_australia"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="120dp"
            android:background="#F8B192"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/roboto_bold"
            android:onClick="goToAustralia"
            android:text="AUSTRALIA/OCEANIA"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F67280"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#F8B192" />

        <Button
            android:id="@+id/btn_antarctica"
            android:layout_width="176.6dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:background="#F8B192"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/roboto_bold"
            android:onClick="goToAntarctica"
            android:text="ANTARCTICA"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F67280"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#F8B192" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#F8B192"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#355C7D"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/imagemenu"
            android:layout_width="61dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_menu_foreground" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"
            android:onClick="goToHome"
            app:srcCompat="@drawable/wanderlust_logo_foreground"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F8B195"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/layout_nav_header"
        app:itemTextColor="#355C7D"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>







